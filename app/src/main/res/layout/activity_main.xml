<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Activity.MainActivity"
    android:layout_margin="5dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbartrangchinh"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </androidx.appcompat.widget.Toolbar>

    <fragment
        android:layout_marginTop="5dp"
        android:name="com.example.mixstore.Activity.Fragment.Fragment_Quang_Cao"
        android:id="@+id/fragmentquangcao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <fragment
        android:id="@+id/fragmentsanpham"
        android:name="com.example.mixstore.Activity.Fragment.Fragment_San_Pham"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>